<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaDeGestaoDeAtivos.Pages.PageCadastroDeAtivo"
             BackgroundColor="#F7F7F7"
             Title="Cadastro de Ativo">


    <ScrollView>
    <VerticalStackLayout Margin="15" Spacing="15">

        <Image Source="logo_sistema.png" HeightRequest="300"/>        
        <Label Text="Cadastro de Ativo" FontSize="Large" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

        <!-- Campos de entrada -->
        <Label Text="Nome" FontAttributes="Bold" />
        <Entry x:Name="NomeEntry" Placeholder="Digite o nome"/>

        <Label Text="Descrição" FontAttributes="Bold" />
        <Entry x:Name="DescricaoEntry" Placeholder="Digite a descrição" />

        <Label Text="Tipo de Ativo" FontAttributes="Bold" />
        <Entry x:Name="TipoAtivoEntry" Placeholder="Digite o tipo de ativo" />

        <Label Text="Categoria" FontAttributes="Bold" />
        <Entry x:Name="CategoriaEntry" Placeholder="Digite a categoria" />

        <Label Text="Adicionar Metadados" FontAttributes="Bold" />
        <Picker x:Name="_picker" TextColor="Black"/>

        <!-- Botão para cadastrar -->
        <Button Text="Cadastrar Ativo" Clicked="CadastrarAtivo_Clicked" BackgroundColor="Black" Margin="0,0,0,50"/>

    </VerticalStackLayout>
   </ScrollView>
</ContentPage>